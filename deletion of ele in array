
#include <stdio.h>
main() 
{
    int n,i,loc,a[20];
    printf("enter value of n\n");
    scanf("%d",&n);
    printf("enter those elements\n");
    for(i=0;i<n;i++)
    scanf("%d",&a[i]);
    printf("the elements in given array are\n");
    for(i=0;i<n;i++)
    printf("%d\n",a[i]);
    printf("enter  location for deletion\n");
    scanf("%d%d",&loc);
    for(i=loc;i<n;i++)
    a[i]=a[i+1];
    n=n-1;
    printf("the elements after deletion are\n");
    for(i=0;i<n;i++)
    printf("%d\n",a[i]);
}    
